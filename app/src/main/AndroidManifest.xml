<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="xpresstech.testyard">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".SplashScreen"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:parentActivityName=".SplashScreen">
            <intent-filter>
                <action android:name="xpresstech.testyard.MAINACTIVITY" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LoginScreenActivity"
            android:label="@string/title_activity_login_screen"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ListTestsAndInterviewsActivity"
            android:label="@string/title_activity_list_tests_and_interviews"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="xpresstech.testyard.MainActivity" />
        </activity>
        <activity
            android:name=".TestCreationActivity"
            android:label="@string/title_activity_test_creation"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="xpresstech.testyard.MainActivity" />
        </activity>
        <activity
            android:name=".CreateTestActivity"
            android:label="@string/title_activity_create_test"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="xpresstech.testyard.MainActivity" />
        </activity>
        <activity
            android:name=".ListTestsByCreatorActivity"
            android:label="@string/list_tests_by_creator"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="xpresstech.testyard.MainActivity" />
        </activity>
        <activity
            android:name=".TakeTestActivity"
            android:label="@string/title_activity_take_test"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="xpresstech.testyard.MainActivity" />
        </activity>
        <activity
            android:name=".ConductInterviewActivity"
            android:label="@string/title_activity_conduct_interview"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="xpresstech.testyard.MainActivity" />
        </activity>
        <activity
            android:name=".ScheduleInterviewActivity"
            android:label="@string/title_activity_schedule_interview"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="xpresstech.testyard.MainActivity" />
        </activity>
        <activity
            android:name=".AttendInterviewActivity"
            android:label="@string/title_activity_attend_interview"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="xpresstech.testyard.MainActivity" />
        </activity>
        <activity
            android:name=".ChallengeCreationActivity"
            android:label="@string/title_activity_challenge_creation"
            android:theme="@style/AppTheme.NoActionBar">
        <meta-data
            android:name="android.support.PARENT_ACTIVITY"
            android:value="xpresstech.testyard.MainActivity" />
        </activity>

    </application>

</manifest>
