<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scroll"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#7093c7">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:scrollbars="vertical" >

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_back"
        android:onClick="backToMainMenu" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Create Test Here\n\n" />
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Test Name:"
        android:id="@+id/captionTestName" />
    <EditText
        android:id="@+id/testname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        <requestFocus />
    </EditText>
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Test Type:"
        android:id="@+id/captionTestType" />
    <Spinner
        android:id="@+id/testtypes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:drawable/btn_dropdown"
        android:spinnerMode="dropdown" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Rules to Apply:"
        android:id="@+id/captionRules" />
    <Spinner
        android:id="@+id/testrules"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:drawable/btn_dropdown"
        android:spinnerMode="dropdown" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Topic of Test:"
        android:id="@+id/captionTopic" />
    <Spinner
        android:id="@+id/testtopics"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:drawable/btn_dropdown"
        android:spinnerMode="dropdown" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Total Score:"
        android:id="@+id/captionTotalScore" />
    <EditText
        android:id="@+id/totalscore"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number" >
    </EditText>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Number of Challenges:"
        android:id="@+id/captionChallengesCount" />
    <EditText
        android:id="@+id/challengesCount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number" >
    </EditText>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Does each challenge has the same score:"
        android:id="@+id/captionSameScore" />
    <RadioGroup
        android:id="@+id/sameScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <RadioButton
            android:id="@+id/sameScoreYes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Yes"
            android:checked="true" />
        <RadioButton
            android:id="@+id/sameScoreNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No" />
    </RadioGroup>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Will incorrect response to a challenge bear negative score:"
        android:id="@+id/captionNegativeScore" />
    <RadioGroup
        android:id="@+id/negativeScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <RadioButton
            android:id="@+id/negativeScoreYes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Yes"
            android:checked="true" />
        <RadioButton
            android:id="@+id/negativeScoreNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No" />
    </RadioGroup>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Minimum Score to Pass:"
        android:id="@+id/captionPassScore" />
    <EditText
        android:id="@+id/passScore"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number" >
    </EditText>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Test Duration (in Minutes):"
        android:id="@+id/captionTestDuration" />
    <EditText
        android:id="@+id/testDuration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number" >
    </EditText>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Max Duration Per Challenge (in Seconds):"
        android:id="@+id/captionMaxChallengeDuration" />
    <EditText
        android:id="@+id/maxChallengeDuration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number" >
    </EditText>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Add Evaluator Email Ids:"
        android:id="@+id/captionEvalEmailIds" />
    <EditText
        android:id="@+id/evalEmailIds"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </EditText>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Evaluator Group Name:"
        android:id="@+id/captionEvalGroupName" />
    <EditText
        android:id="@+id/evalGroupName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </EditText>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Test Publish Date:"
        android:id="@+id/captionTestPublishDate" />
    <LinearLayout
        android:id="@+id/pub_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal" >
    <EditText
        android:id="@+id/testPublishDate"
        android:layout_width="0dp"
        android:layout_weight="0.5"
        android:layout_height="wrap_content"
        android:hint="yyyy-mm-dd"
        android:inputType="number" >
    </EditText>
    <ImageButton
        android:id="@+id/imageButtonPublish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/publish_button" />
    </LinearLayout>
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Test Activation Date:"
        android:id="@+id/captionTestActivationDate" />
    <LinearLayout
        android:id="@+id/act_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal" >
    <EditText
        android:id="@+id/testActivationDate"
        android:layout_width="0dp"
        android:layout_weight="0.5"
        android:layout_height="wrap_content"
        android:hint="yyyy-mm-dd"
        android:inputType="number" >
    </EditText>
    <ImageButton
        android:id="@+id/imageButtonActivate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/activate_button" />
    </LinearLayout>
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Targeted Skill Level:"
        android:id="@+id/captionSkillLevel" />
    <Spinner
        android:id="@+id/targetskilllevels"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:drawable/btn_dropdown"
        android:spinnerMode="dropdown" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Test Scope:"
        android:id="@+id/captionTestScope" />
    <Spinner
        android:id="@+id/testscope"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:drawable/btn_dropdown"
        android:spinnerMode="dropdown" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Answering Language:"
        android:id="@+id/captionAnsweringLanguage" />
    <Spinner
        android:id="@+id/answeringlanguages"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:drawable/btn_dropdown"
        android:spinnerMode="dropdown" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Programming Environment:"
        android:id="@+id/captionProgEnv" />
    <Spinner
        android:id="@+id/progenv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:drawable/btn_dropdown"
        android:spinnerMode="dropdown" />

    <CheckBox android:id="@+id/allowmultimedia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/allow_multimedia" />

    <CheckBox android:id="@+id/randomsequenced"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/random_sequenced" />

    <CheckBox android:id="@+id/multipleattempts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/multiple_attempts"
        android:onClick="onMultiAttemptsClicked" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal" >
    <Button
        android:id="@+id/createtest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/create_test"
        android:onClick="createTest" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/close_app"
        android:onClick="closeapp" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal" >
    <Button
        android:id="@+id/addchallenges"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add_challenges"
        android:onClick="addChallenges"
        android:enabled = "false" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_back"
        android:onClick="backToMainMenu" />
    </LinearLayout>
</LinearLayout>
</ScrollView>